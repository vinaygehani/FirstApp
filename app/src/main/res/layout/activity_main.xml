<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.android.firstapp.MainActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/beach"

        />

    <TextView
        android:id="@+id/qty_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/qty_value"
        android:layout_centerHorizontal="true"
        android:padding="8dp"
        android:text="Quantity"
        android:textAllCaps="true"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/qty_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/price_txt"
        android:layout_centerHorizontal="true"
        android:text="0"
        android:padding="8dp"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/price_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/price_value"
        android:layout_centerHorizontal="true"
        android:padding="8dp"
        android:text="Price"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/price_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/order_button"
        android:layout_centerHorizontal="true"
        android:padding="8dp"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <Button
        android:id="@+id/order_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/thanks_text"
        android:layout_centerHorizontal="true"
        android:text="Order"
        android:onClick="submitOrder"/>

    <Button
        android:id="@+id/inc_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_toRightOf="@+id/qty_value"
        android:layout_above="@+id/price_txt"
        android:text="+"
        android:textSize="20dp"
        android:padding="8dp"
        android:onClick="increaseQuantity"/>

    <Button
        android:id="@+id/dec_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_toLeftOf="@+id/qty_value"
        android:layout_above="@+id/price_txt"
        android:text="-"
        android:padding="8dp"
        android:textSize="20dp"
        android:onClick="decreaseQuantity"/>

    <TextView
        android:id="@+id/thanks_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="8dp"
        android:layout_alignParentBottom="true"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

</RelativeLayout>
